<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="musicVideo" type="com.alandvg.mcontigotest.entity.MusicVideo"/>
    </data>
    <FrameLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp" android:layout_marginRight="8dp">


        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="250dp" tools:srcCompat="@tools:sample/avatars"
                        android:id="@+id/img_album"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        android:scaleType="fitXY"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/tv_name_music"
                        android:adjustViewBounds="true" android:cropToPadding="true"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_name_music"
                        android:text="@{musicVideo.trackName}"
                        tools:text="Fear of the Dark"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/img_album"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        android:textSize="14sp" android:singleLine="true"
                        app:layout_constraintEnd_toStartOf="@+id/tv_preco" android:layout_marginEnd="126dp"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_name_artista"
                        android:text="@{musicVideo.artistName}"
                        tools:text="Iron Maiden"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_name_music"
                        android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/tv_preco" android:layout_marginEnd="126dp"
                        android:singleLine="true"/>
                <TextView
                        android:text='@{musicVideo.currency + " "+ musicVideo.trackPrice}'
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_preco" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_name_artista" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="@+id/tv_name_music" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/tv_name_music"
                        android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0" tools:text="R$3,99"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</layout>